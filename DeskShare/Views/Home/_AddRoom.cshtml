@model  DeskShare.Models.Rooms

<h4>Raum hinzufügen</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         
            <div class="form-group">
                <label class="control-label">Stockwerk</label>
                <select asp-for="_FloorId" class="form-control" id="ddFloor">
                    <option disabled selected value="null"> -- Stockwerk auswählen -- </option>
                  
                </select>
                <span asp-validation-for="_FloorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Anzeigereihenfolge</label>
                <input asp-for="_Order" class="form-control" id="roomOrder"/>
                <span asp-validation-for="_Order" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Bezeichnung</label>
                <input asp-for="_Name" class="form-control"id="roomName" />
                <span asp-validation-for="_Name" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <button id="_AddRoomSubmitButton" class="btn btn-primary">Erstellen</button>
            </div>
        </form>
    </div>
</div>



