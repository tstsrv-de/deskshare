@model IEnumerable<DeskShare.Models.Desks>
    
        <h3 class="text-center">Tische</h3>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model._Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model._Order)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model._Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model._RoomId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model._Screens)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model._Keyboard)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model._Mouse)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model._Docking)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model._Computer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model._Stand)
                </th>
               
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item._Id)
                </td>
                <td>
                    @Html.EditorFor(modelItem => item._Order, new { htmlAttributes = new { @class = "form-control", @id = "deskOrder_" + item._Id } })
                </td>
                <td>
                    @Html.EditorFor(modelItem => item._Name, new { htmlAttributes = new { @class = "form-control", @id = "deskName_" + item._Id } })
                </td>
                <td>
                    @Html.EditorFor(modelItem => item._RoomId, new { htmlAttributes = new { @class = "form-control", @id = "deskRoom_" + item._Id } })
                </td>
                <td>
                    @Html.EditorFor(modelItem => item._Screens, new { htmlAttributes = new { @class = "form-control", @id = "deskScreens_" + item._Id } })
                </td>
                <td>
                    @Html.EditorFor(modelItem => item._Keyboard, new { htmlAttributes = new { @class = "form-control", @id = "deskKeyboard_" + item._Id } })
                </td>
                <td>
                    @Html.EditorFor(modelItem => item._Mouse, new { htmlAttributes = new { @class = "form-control", @id = "deskMouse_" + item._Id } })
                </td>
                <td>
                    @Html.EditorFor(modelItem => item._Docking, new { htmlAttributes = new { @class = "form-control", @id = "deskDocking_" + item._Id } })
                </td>
                <td>
                    @Html.EditorFor(modelItem => item._Computer, new { htmlAttributes = new { @class = "form-control", @id = "deskComputer_" + item._Id } })
                </td>
                <td>
                    @Html.EditorFor(modelItem => item._Stand, new { htmlAttributes = new { @class = "form-control", @id = "deskStand_" + item._Id } })
                </td>
                <td>
                    <div class="input-group-prepend">
                        <div class="btn btn-success " style="padding-right:5px" onclick="saveDeskRecord(@item._Id)">Speichern</div>
                        <div class="btn btn-danger" onclick="deleteDeskRecord(@item._Id)">löschen</div>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
