@model IEnumerable<DeskShare.Models.Floors>

<h3 class="text-center">Stockwerke</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model._Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model._Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model._Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model._BuildingId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item._Id)
            </td>
            <td>
                @Html.EditorFor(modelItem => item._Order, new { htmlAttributes = new { @class = "form-control", @id = "floorOrder_" + item._Id } })
            </td>
            <td>
                @Html.EditorFor(modelItem => item._Name, new { htmlAttributes = new { @class = "form-control", @id = "floorName_" + item._Id } })
            </td>
            <th>
                @Html.EditorFor(model => item._BuildingId, new { htmlAttributes = new { @class = "form-control", @id = "floorBuilding_" + item._Id } })
            </th>
            <td>
                <div class="input-group-prepend">
                    <div class="btn btn-success " style="padding-right:5px" onclick="saveFloorRecord(@item._Id)">Speichern</div>
                    <div class="btn btn-danger" onclick="deleteFloorRecord(@item._Id)">löschen</div>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
