@model IEnumerable<DeskShare.Models.Rooms>

<h3 class="text-center">Räume</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model._Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model._Order)
            </th>

            <th>
                @Html.DisplayNameFor(model => model._Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model._FloorId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item._Id)
                </td>
                <td>
                    @Html.EditorFor(modelItem => item._Order, new { htmlAttributes = new { @class = "form-control", @id = "roomOrder_" + item._Id } })
                </td>

                <td>
                    @Html.EditorFor(modelItem => item._Name, new { htmlAttributes = new { @class = "form-control", @id = "roomName_" + item._Id } })
                </td>
                <td>
                    @Html.EditorFor(modelItem => item._FloorId, new { htmlAttributes = new { @class = "form-control", @id = "roomFloorid_" + item._Id } })
                </td>
                <td>
                    <div class="input-group-prepend">
                        <div class="btn btn-success " style="padding-right:5px" onclick="saveRoomRecord(@item._Id)">Speichern</div>
                        <div class="btn btn-danger" onclick="deleteRoomRecord(@item._Id)">löschen</div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
